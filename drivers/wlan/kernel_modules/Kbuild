subdir-ccflags-y += -iquote$(srctree)/drivers/wlan/kernel_modules/include/
else


subdir-ccflags-y += -I$(KERNEL_SRC)/$(KCONFIG_EXT_PREFIX)drivers/wlan/kernel_modules/include/
subdir-ccflags-y += -iquote$(KERNEL_SRC)/$(KCONFIG_EXT_PREFIX)drivers/wlan/kernel_modules/include/
KBUILD_CPPFLAGS += -DCONFIG_QRTR_NODE_ID=20
KBUILD_CPPFLAGS += -DCONFIG_QRTR_WAKEUP_MS=500
endif

