KBUILD_CPPFLAGS += -DCONFIG_MHI_BUS_MISC
KBUILD_CPPFLAGS += -DCONFIG_MHI_OUT_OF_TREE
KBUILD_CPPFLAGS += -DCONFIG_QRTR_MHI
